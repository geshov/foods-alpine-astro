---
import Navbar from "./Navbar.astro";

import DishesList from "./DishesList.astro";
import MenuList from "./MenuList.astro";
import FoodsList from "./FoodsList.astro";

import RecipeModal from "./RecipeModal.astro";
---

<section class="_section">
  <div class="_container">
    <div x-data="recipes">
      <div x-data="foods">
        <Navbar />

        <div x-show="view === 'dishes'">
          <DishesList />
        </div>

        <div x-show="view === 'menu'">
          <MenuList />
        </div>

        <div x-show="view === 'foods'">
          <FoodsList />
        </div>

        <RecipeModal />
      </div>
    </div>
  </div>
</section>
