<h1 class="text-2xl text-center font-semibold mb-4">Меню</h1>

<template x-for="dish in menu" :key="dish.slug">
  <div>
    <div class="flex justify-between items-center gap-4">
      <div x-text="dish.data.name"></div>
      <button
        @click="toggleSelect(dish)"
        class="btn btn-sm btn-square btn-outline"
      >
        <box-icon name="minus" class="fill-current"></box-icon>
      </button>
    </div>
    <div class="divider my-1"></div>
  </div>
</template>

<div x-show="!menu.length" class="text-center">Блюда не выбраны.</div>
